#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    behaviors {
        as: autoshift {
            compatible = "zmk,behavior-hold-tap";
            label = "AUTOSHIFT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <220>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <110>;
            flavor = "tap-preferred";
        };

        hml: hrm_left {
            compatible = "zmk,behavior-hold-tap";
            label = "HRM_LEFT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <250>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <100>;
            flavor = "balanced";
            hold-trigger-key-positions = <30 18 8 7 32 21 23 44 43 45 41 42 31 19 6 20 9 33 34 22 10 11 35 39 36 40>;
            hold-trigger-on-release;
        };

        hmr: hrm_right {
            compatible = "zmk,behavior-hold-tap";
            label = "HRM_RIGHT";
            bindings = <&kp>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <250>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <100>;
            flavor = "balanced";
            hold-trigger-on-release;
            hold-trigger-key-positions = <26 13 24 1 0 12 3 4 2 5 14 15 29 17 16 25 38 37 27 28 39 40 45 36 41 42>;
        };

        mol: mo_left {
            compatible = "zmk,behavior-hold-tap";
            label = "MO_LEFT";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <220>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <100>;
            flavor = "balanced";
            hold-trigger-key-positions = <19 21 41 45 42 30 31 43 32 33 44 34 35 23 22 10 11 9 8 20 7 6 18>;
            hold-trigger-on-release;
        };

        mor: mo_right {
            compatible = "zmk,behavior-hold-tap";
            label = "MO_RIGHT";
            bindings = <&mo>, <&kp>;

            #binding-cells = <2>;
            tapping-term-ms = <220>;
            quick-tap-ms = <175>;
            require-prior-idle-ms = <100>;
            flavor = "balanced";
            hold-trigger-key-positions = <26 13 24 1 0 12 3 4 2 5 14 15 29 17 16 25 38 37 27 28 39 40 36>;
            hold-trigger-on-release;
        };
    };

    macros {
        tap2_macro: tap2_macro {
            compatible = "zmk,behavior-macro-two-param";
            #binding-cells = <2>;
            bindings =
                <&macro_param_1to1>,
                <&macro_tap>,
                <&kp MACRO_PLACEHOLDER &macro_param_2to1>,
                <&macro_tap>,
                <&kp MACRO_PLACEHOLDER>;

            label = "TAP2_MACRO";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        Qwer-Mac {
            bindings = <
&kp TAB       &kp Q             &kp W            &kp E              &kp R                &kp T         &kp Y          &kp U                 &kp I                &kp O                 &kp P                           &kp CAPSLOCK
&none         &kp A             &hml LEFT_ALT S  &hml LEFT_SHIFT D  &hml LEFT_CONTROL F  &kp G         &kp H          &hmr RIGHT_CONTROL J  &hmr RIGHT_SHIFT K   &hmr RIGHT_ALT L      &as COLON SEMI                  &none
&kp LEFT_GUI  &kp Z             &kp X            &kp C              &kp V                &kp B         &kp N          &kp M                 &as LESS_THAN COMMA  &as GREATER_THAN DOT  &as QUESTION SLASH              &kp RIGHT_GUI
              &mor 3 BACKSLASH  &none            &none              &mol 2 ESC           &mor 6 SPACE  &mor 4 RETURN  &mor 5 BACKSPACE      &none                &none                 &as DOUBLE_QUOTES SINGLE_QUOTE
            >;
        };

        Qwer-Win {
            bindings = <
&kp TAB       &kp Q             &kp W            &kp E              &kp R                &kp T         &kp Y          &kp U                 &kp I                &kp O                 &kp P                           &kp CAPSLOCK
&none         &kp A             &hml LEFT_ALT S  &hml LEFT_SHIFT D  &hml LEFT_CONTROL F  &kp G         &kp H          &hmr RIGHT_CONTROL J  &hmr RIGHT_SHIFT K   &hmr RIGHT_ALT L      &as COLON SEMI                  &none
&kp LEFT_GUI  &kp Z             &kp X            &kp C              &kp V                &kp B         &kp N          &kp M                 &as LESS_THAN COMMA  &as GREATER_THAN DOT  &as QUESTION SLASH              &kp RIGHT_GUI
              &mor 3 BACKSLASH  &none            &none              &mol 2 ESC           &mor 7 SPACE  &mor 4 RETURN  &mor 5 BACKSPACE      &none                &none                 &as DOUBLE_QUOTES SINGLE_QUOTE
            >;
        };

        Fun {
            bindings = <
&bootloader  &bt BT_SEL 0    &bt BT_SEL 1  &bt BT_SEL 2    &bt BT_SEL 3      &bt BT_SEL 4  &kp F10  &kp F7      &kp F8  &kp F9  &none  &bootloader
&none        &none           &kp LEFT_ALT  &kp LEFT_SHIFT  &kp LEFT_CONTROL  &none         &kp F11  &kp F4      &kp F5  &kp F6  &none  &none
&none        &bt BT_CLR_ALL  &bt BT_CLR    &none           &out OUT_BLE      &out OUT_USB  &kp F12  &kp F1      &kp F2  &kp F3  &to 0  &to 1
             &none           &none         &none           &none             &none         &none    &kp DELETE  &none   &none   &none
            >;
        };

        Nav {
            bindings = <
&trans  &none  &kp HOME        &kp UP_ARROW    &kp END          &none  &none  &none  &none  &none  &none  &trans
&trans  &none  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp RIGHT_ARROW  &none  &none  &none  &none  &none  &none  &trans
&trans  &none  &kp PAGE_DOWN   &none           &kp PAGE_UP      &none  &none  &none  &none  &none  &none  &trans
        &none  &none           &none           &none            &none  &none  &none  &none  &none  &none
            >;
        };

        Num {
            bindings = <
&trans  &none             &kp N7  &kp N8  &kp N9            &kp N0             &none  &tap2_macro LESS_THAN MINUS  &tap2_macro MINUS GREATER_THAN  &tap2_macro EQUAL GREATER_THAN  &none  &trans
&trans  &kp BACKSLASH     &kp N4  &kp N5  &kp N6            &kp MINUS          &none  &tap2_macro LESS_THAN EQUAL  &tap2_macro GREATER_THAN EQUAL  &tap2_macro EXCL EQUAL          &none  &trans
&trans  &kp SINGLE_QUOTE  &kp N1  &kp N2  &kp N3            &kp EQUAL          &none  &none                        &tap2_macro PLUS EQUAL          &tap2_macro MINUS EQUAL         &none  &trans
        &kp GRAVE         &none   &none   &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &none  &none                        &none                           &none                           &none
            >;
        };

        Sym {
            bindings = <
&trans  &none              &kp AMPERSAND    &kp ASTERISK  &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS  &none  &tap2_macro LESS_THAN MINUS  &tap2_macro MINUS GREATER_THAN  &tap2_macro EQUAL GREATER_THAN  &none  &trans
&trans  &kp PIPE           &kp DOLLAR       &kp PERCENT   &kp CARET             &kp UNDERSCORE         &none  &tap2_macro LESS_THAN EQUAL  &tap2_macro GREATER_THAN EQUAL  &tap2_macro EXCL EQUAL          &none  &trans
&trans  &kp DOUBLE_QUOTES  &kp EXCLAMATION  &kp AT        &kp HASH              &kp PLUS               &none  &none                        &tap2_macro PLUS EQUAL          &tap2_macro MINUS EQUAL         &none  &trans
        &kp TILDE          &none            &none         &kp LEFT_BRACE        &kp RIGHT_BRACE        &none  &none                        &none                           &none                           &none
            >;
        };

        Edit-Mac {
            bindings = <
&trans  &kp LA(Q)  &kp LA(W)  &kp LA(E)  &kp LA(R)  &kp LA(T)  &kp LA(Y)  &none              &none            &none          &none  &trans
&trans  &kp LA(A)  &kp LA(S)  &kp LA(D)  &kp LA(F)  &kp LA(G)  &kp LA(H)  &kp RIGHT_CONTROL  &kp RIGHT_SHIFT  &kp RIGHT_ALT  &none  &trans
&trans  &kp LA(Z)  &kp LA(X)  &kp LA(C)  &kp LA(V)  &kp LA(B)  &kp LA(N)  &none              &none            &none          &none  &trans
        &none      &none      &none      &none      &none      &none      &none              &none            &none          &none
            >;
        };

        Edit-Win {
            bindings = <
&trans  &kp LC(Q)  &kp LC(W)  &kp LC(E)  &kp LC(R)  &kp LC(T)  &kp LC(Y)  &none              &none            &none          &none  &trans
&trans  &kp LC(A)  &kp LC(S)  &kp LC(D)  &kp LC(F)  &kp LC(G)  &kp LC(H)  &kp RIGHT_CONTROL  &kp RIGHT_SHIFT  &kp RIGHT_ALT  &none  &trans
&trans  &kp LC(Z)  &kp LC(X)  &kp LC(C)  &kp LC(V)  &kp LC(B)  &kp LC(N)  &none              &none            &none          &none  &trans
        &none      &none      &none      &none      &none      &none      &none              &none            &none          &none
            >;
        };
    };
};
